<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#231f20"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@mipmap/app_logo"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#ffffff"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/passwordTextView"
        android:layout_toStartOf="@+id/logo" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/signinButton"
        android:layout_alignStart="@+id/emailTextView" />

    <EditText
        android:id="@+id/emailTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="11"
        android:backgroundTint="#ffffff"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/emailTextView"
        android:layout_alignBottom="@+id/emailTextView"
        android:layout_alignStart="@+id/passwordTextBox" />

    <EditText
        android:id="@+id/passwordTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:ems="11"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/passwordTextView"
        android:layout_toEndOf="@+id/emailTextView" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/passwordTextView"
        android:layout_marginBottom="62dp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignTop="@+id/signinButton"
        android:text="Sign UP" />

    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:typeface="serif"
        android:text="Loop"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>